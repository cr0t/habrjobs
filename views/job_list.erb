<div class="span-10 head">Должность</div>
<div class="span-4 head">Дата</div>
<div class="span-5 head">Регион</div>
<div class="span-3 head">Зарплата</div>
<div class="span-2 last head">Детали</div>

<% @jobs.each_with_index do |job, index| %>
<div class="span-24 last <%= (index % 2) == 0 ? 'even' : 'odd' %>">
	<div class="span-10"><%= job['title'] %></div>
	<div class="span-4"><%= job['date'] %></div>
	<div class="span-5"><%= job['region'].squeeze(" ") %></div>
	<div class="span-3"><%= job['money_num'] %> (<%= job['money'] %>)</div>
	<div class="span-2 last"><a href="<%= job['url'] %>" target="_blank">Перейти&nbsp;&rarr;</a></div>
</div>
<% end %>
